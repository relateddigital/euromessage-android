<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/ll_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="75dp"
            android:paddingLeft="75dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_carousel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="2dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_carousel_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="2dp"
                android:singleLine="false"
                android:text=""
                android:textColor="#000"
                android:textSize="14sp"
                android:visibility="visible" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/ll_left_item_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="3dp"
                    android:focusable="true"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp">

                    <ImageView
                        android:id="@+id/iv_image_left"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_left_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingTop="5dp"
                        android:paddingBottom="2dp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_left_description_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:textColor="#565255"
                        android:lines="2"
                        android:minLines="2"
                        android:maxLines="3"
                        android:paddingTop="2dp"
                        android:paddingBottom="5dp"
                        android:text=""
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_right_item_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginEnd="5dp">

                    <ImageView
                        android:id="@+id/iv_image_right"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="20dp"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tv_right_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingTop="5dp"
                        android:paddingBottom="2dp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_right_description_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:minLines="2"
                        android:maxLines="3"
                        android:textColor="#565255"
                        android:paddingTop="2dp"
                        android:paddingBottom="5dp"
                        android:text=""
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#80ffffff"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_carousel_right_icon"
                android:tint="#263238"
                android:layout_alignParentEnd="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/iv_arrow_left"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="#80ffffff"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_carousel_left_arrow"
                android:tint="#263238"
                android:focusable="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_carousel_app_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_carousel_icon"
        android:layout_alignParentStart="true" />


</RelativeLayout>